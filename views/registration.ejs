<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/meta-data'); %>
    <%- include('./partials/style-sheets'); %>
    <link rel="stylesheet" href="./css/forms.css">
    <title>Registration | Travel Experts</title>
  </head>

<body>
  <div class='main-content'>

    <%- include('./partials/navigation'); %>

    <header class="Register">
    
    </header>

    <main class="center flex-column background">

      <div id="error"></div>
        
      <form class="register-login" id="form" action="/registration" method="POST">
        <fieldset>
          <legend><h3>Registration Form</h3></legend>
          <div class="input-field" id="name">
            <label class="required" for="fullName">Full Name:</label>
            <input type="text" id="fullName" name="fullName" minlength='6' required>
            <span role="tooltip">Please enter a valid name</span>
          </div>                  
          <div class="input-field" id="user-email">
            <label class="required" for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <span role="tooltip">Please enter a valid email</span>
          </div>                  
          <div class="input-field" id="user-name">
            <label class="required" for="username">Username:</label>
            <input type="username" id="username" name="username" minlength='4' required>
            <span role="tooltip">Please enter a valid username</span>
          </div>                  
          <div class="input-field" id="user-password">
            <label class="required" for="password">Password:</label>
            <input type="password" id="password" name="password" minlength='6' maxlength='10' required>
            <span role="tooltip">The password must be between 6 and 10 characters</span>
          </div>                   
          <div class="input-field" id="confirm-password">
            <label class="required" for="confirm-password">Confirm Password:</label>
            <input type="password" id="confirm-password" minlength='6' maxlength='10' name="confirm-password" required>
            <span role="tooltip">The password must match your first entry</span>
          </div>                  
          <div class="input-field" id="user-address">
            <label class="required" for="address">Address:</label>
            <input type="address" id="address" name="address" required>
            <span role="tooltip">Please enter a valid address</span>
          </div>                  
          <div class="input-field" id="cell-phone">
            <label class="required" for="businessPhone">Cell phone:</label>
            <input type="" id="businessPhone" name="businessPhone" required>
            <span role="tooltip">Please enter a valid phone number</span>
          </div>                  
          <div class="input-field" id="homePhone">
            <label for="homePhone">Home phone:</label>
            <input type="" id="homePhone" name="homePhone">
            <span role="tooltip">Please enter a valid phone number</span>
          </div>                   
          <section class="button-container center">
            <button class="button" type="submit" id="submit">Submit</button>
            <button class="button" type="reset">Reset</button>
          </section>
        </fieldset>
      </form>

      <!--Message for registration confirmation-->
      <% if(message==''){ %>
        <h2 style="color: white"></h2>
      <% }

      else
      { %>
        <h2 style="color: white"><%= message %></h2>
      <% } %>

    </main>
          
    <%- include('./partials/footer'); %>

  </div>
  <%- include('./partials/scripts'); %>
</body>
</html>