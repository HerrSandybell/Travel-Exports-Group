<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/meta-data'); %>
    <%- include('./partials/style-sheets'); %>
    <link rel="stylesheet" href="./css/forms.css">
    <title>Registration | Travel Experts</title>
  </head>

<body>
  <div class='main-content'>

    <%- include('./partials/navigation'); %>

    <header class="Register">
    
    </header>

    <main class="center background">

      <div id="error"></div>
        
      <form class="register-login" id="form" action="/registration" method="POST">
        <fieldset>
          <legend><h3>Registration Form</h3></legend>
          <div id="name">
            <label class="required" for="fullName">Full Name:</label>
            <input type="text" id="fullName" name="fullName" required>
          </div>                  
          <div id="user-email">
            <label class="required" for="email">Email:</label>
            <input type="email" id="email" name="email" required>
          </div>                  
          <div id="user-name">
            <label class="required" for="username">Username:</label>
            <input type="username" id="username" name="username" required>
          </div>                  
          <div id="user-password">
            <label class="required" for="password">Password:</label>
            <input type="password" id="password" name="password" required>
          </div>                   
          <div id="confirm-password">
            <label class="required" for="confirm-password">Confirm Password:</label>
            <input type="password" id="confirm-password" name="confirm-password" required>
          </div>                  
          <div id="user-address">
            <label class="required" for="address">Address:</label>
            <input type="address" id="address" name="address" required>
          </div>                  
          <div id="cell-phone">
            <label class="required" for="business-phone">Cell phone:</label>
            <input type="" id="business-phone" name="business-phone" required>
          </div>                  
          <div id="home-phone">
            <label for="home-phone">Home phone:</label>
            <input type="" id="home-phone" name="home-phone">
          </div>                   
          <section class="button-container center">
            <button class="button" type="submit" id="submit">Submit</button>
            <button class="button" type="reset">Reset</button>
          </section>
        </fieldset>
      </form>

      <!--Message for registration confirmation-->
      <% if(message==''){ %>
        <h2></h2>
      <% }

      else
      { %>
        <h2><%= message %></h2>
      <% } %>

    </main>
          
    <%- include('./partials/footer'); %>

  </div>
  <%- include('./partials/scripts'); %>
</body>
</html>