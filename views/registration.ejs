<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/meta-data'); %>
    <%- include('./partials/style-sheets'); %>
    <link rel="stylesheet" href="./css/forms.css">
    <title>Registration | Travel Experts</title>
    <style>

    </style>
  </head>

<body>
  <div class='main-content'>

    <%- include('./partials/navigation'); %>

    <header class="Register">
    
    </header>

    <main class="center flex-column background">

      <div class="error">
        <ul>
          <li><%= message %></li>        
          <li><%= errorMessage.emailMessage %></li>
          <li><%= errorMessage.usernameMessage %></li>
          <li><%= errorMessage.passwordMessage %></li>
        </ul>
      </div>

        
      <form class="register-login" id="form" action="/registration" method="POST">
        <fieldset>
          <legend><h3>Registration Form</h3></legend>
          <div class="input-field" id="name">
            <label class="required" for="CustomerFullName">Full Name:</label>
            <input type="text" id="CustomerFullName" name="CustomerFullName" minlength='6' required>
            <span role="tooltip">Please enter a valid name</span>
          </div>                  
          <div class="input-field" id="email">
            <label class="required" for="CustomerEmail">Email:</label>
            <input type="email" id="CustomerEmail" name="CustomerEmail" required>
            <span role="tooltip">Please enter a valid email</span>
          </div>                  
          <div class="input-field" id="username">
            <label class="required" for="CustomerUserName">Username:</label>
            <input type="text" id="CustomerUserName" name="CustomerUserName" minlength='4' required>
            <span role="tooltip">Please enter a valid username</span>
          </div>                  
          <div class="input-field" id="user-password">
            <label class="required" for="CustomerPassword">Password:</label>
            <input type="password" id="CustomerPassword" name="CustomerPassword" minlength='6' maxlength='10' required>
            <span role="tooltip">The password must be between 6 and 10 characters</span>
          </div>                   
          <div class="input-field" id="confirm-password">
            <label class="required" for="confirmPassword">Confirm Password:</label>
            <input type="password" id="confirmPassword" minlength='6' maxlength='10' name="confirmPassword" required>
            <span role="tooltip">The password must match your first entry</span>
          </div>                  
          <div class="input-field" id="user-address">
            <label class="required" for="CustomerAddress">Address:</label>
            <input type="text" id="CustomerAddress" name="CustomerAddress" required>
            <span role="tooltip">Please enter a valid address</span>
          </div>                  
          <div class="input-field" id="cell-phone">
            <label class="required" for="CustomerCellPhone">Cell phone:</label>
            <input type="tel" id="CustomerCellPhone" name="CustomerCellPhone" required>
            <span role="tooltip">Please enter a valid phone number</span>
          </div>                  
          <div class="input-field" id="home-phone">
            <label for="CustomerHomePhone">Home phone:</label>
            <input type="tel" id="CustomerHomePhone" name="CustomerHomePhone">
            <span role="tooltip">Please enter a valid phone number</span>
          </div>                   
          <section class="button-container center">
            <button class="button" type="submit" id="submit">Submit</button>
            <button class="button" type="reset">Reset</button>
          </section>
        </fieldset>
      </form>


    </main>
          
    <%- include('./partials/footer'); %>

  </div>
  <%- include('./partials/scripts'); %>
  <script>
  </script>
</body>
</html>