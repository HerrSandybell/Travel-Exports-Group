<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/meta-data'); %>
    <%- include('./partials/style-sheets'); %>
    <title>Registration | Travel Experts</title>
  </head>

<body>
  <div class='main-content'>

    <%- include('./partials/navigation'); %>

    <header class="Register">
    
    </header>

    <main>
      <div class="placement">
        <h1>REGISTER HERE</h1>
      </div>

      <div id="error"></div>
        
      <form id= "form" action="/registration" method="POST">
        <fieldset>
          <legend><h3>Registration Form</h3></legend>
          <p>Full Name:<input type="text" id="fullName" name="fullName" required></p>
          <p>Email Address:<input type="email" id="Email" name="Email" required></p>
          <p>Username:<input type="username" id="username" name="username" required></p>
          <p>Password:<input type="password" id="Password" name="Password" required></p> 
          <p>Confirm Password:<input type="password" id="confirmPassword" name="confirmPassword"></p>
          <p>Address:<input type="address" id="address" name="address" required></p>
          <p>Cell phone:<input type="" id="businessPhone" name="businessPhone" required></p>
          <p>Home phone:<input type="" id="homePhone" name="homePhone" required></p> 
      
          <button type="reset">Reset</button>
          <button type="submit" id="submit">Submit</button>
        </fieldset>
      </form>
      <!--Message for registration confirmation-->
      <% if(message==''){ %>
        <h2></h2>
     <% }

      else
      { %>
        <h2><%= message %></h2>
     <% } %>

    </main>
          
    <%- include('./partials/footer'); %>

  </div>
  <script>
  </script>
</body>
</html>