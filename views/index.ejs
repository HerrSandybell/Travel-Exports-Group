    .package-cards-gallery figure {
      background-size: cover;
      position: relative;
      padding: 0;
      margin: 10px;
      border-radius: 15px;
      box-shadow: 0px 0px 10px gray;
      width: 300px;
      height: 300px;
    }

    .package-cards-gallery figure div {
      width: 100% !important;
      margin: 10px;
    }

    .package-cards-gallery figure span {
      margin-left: 15px;
      background: var(--teal);
      color: white;
      padding: 5px;
      border-radius: 1em;
    }

    .package-cards-gallery img {
      display: none;
    }

    .package-cards-gallery figcaption {
      position: absolute;
      bottom: 0;
      color: white;
      font-size: 1.1rem;
      font-weight: 700;
      border-radius: 0 0 15px 15px;
    }



