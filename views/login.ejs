<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/meta-data'); %>
  <%- include('./partials/style-sheets'); %>
  <link rel="stylesheet" href="./css/forms.css">
  <title>Login | Travel Experts</title>
</head>

<body>
  <div class='main-content'>

    <%- include('./partials/navigation'); %>

  <main>
    <div class="placement">
      <h2>Login Here</h2>
    </div>

    <div id="error"></div>
    <form class = "formLogin" action="/" method="GET">
        <fieldset>
            <legend><h3>Login</h3></legend>
            <p>Username:<input id="username" type="username" name="username" required autofocus pattern="[a-zA-Z0-9]" title="please enter a valid username"></p>
            <p>Password:<input id="Password" type="password" name="Password" required></p>
        
            <div class="button-container center">
              <button type="reset">Reset</button>
              <button type="submit" id="submit">Submit</button>
            </div>
        </fieldset>     
    </form>
  </main>

  <%- include('./partials/footer'); %>

  </div>
  <%- include('./partials/scripts'); %>
</body>
</html>

